NC_FILE=ot8sga.pdk0dec.nc
ORIG_FILE=../../test_data/hadam3p_eu_ot8s_2000_1_008287848_1/$NC_FILE
ORIG_VAR=field8

LEV=7
NPTS=0

#eu_mesh_0_7_DX.msh

MESH_FILE=../../grids/eu_mesh_$NPTS""_$LEV"_DX.msh"
RGD_FILE=${ORIG_FILE%.nc}_l$LEV"".rgd

MESH_PLOT_FILE=../output/global/hadam3p_mesh_$NPTS""_$LEV".pdf"

# plot the mesh
#../plot_tri_tracker.py -m $MESH_FILE -x [-50,75] -y [10,80] -o $MESH_PLOT_FILE -l $LEV -d -g $ORIG_FILE -v $ORIG_VAR

# plot the data
for MAX_LEV in {0..7};
do
RGD_PLOT_FILE=${RGD_FILE%.rgd}_M$MAX_LEV"_"dymax.pdf
cmd="../plot_tri_mesh_dymax.py -m $MESH_FILE -o $RGD_PLOT_FILE -l $LEV -a $MAX_LEV -x [1.5,3.5] -y [0.85,2.6] -g $ORIG_FILE -v field8"
echo $cmd
$cmd
done
